<style>
	body {
		color: #fff;
        background: #857457c9;
        font-family: 'Roboto', sans-serif;
	}
	.form-control {
		min-height: 41px;
		background: #f2f2f2;
		box-shadow: none !important;
		border: transparent;
	}
	.form-control i {
		position: absolute;
		left: 75%;
    	top: 27px;
    	color: orange;
	}

	.form-control:focus {
		background: #e2e2e2;
	}
	.form-control, .btn {        
        border-radius: 2px;
    }
	.login-form {
		width: 350px;
	
		margin: 30px auto;
		text-align: center;
	}
	.login-form h2 {
        margin: 10px 0 25px;
    }
    .login-form form {
		color: #7a7a7a;
		border-radius: 3px;
    	margin-bottom: 15px;
        background: #fff;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }

    .login-form .btn {        
        font-size: 16px;
        font-weight: bold;
		background: #179b81;
		border: none;
        outline: none !important;
    }
	.login-form .btn:hover, .login-form .btn:focus {
		background: #179b81;
	}
	.login-form a {
		color: #fff;
		text-decoration: underline;
	}
	.login-form a:hover {
		text-decoration: none;
	}
	.login-form form a {
		color: #7a7a7a;
		text-decoration: none;
	}
	.login-form form a:hover {
		text-decoration: underline;
	}
</style>
</head>
<body >
	<nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
		<div class="container">
		  <img id="logo" src="logo.png" alt="logo" onclick="location.href='/mainpage'" />
			<p class="logo-font" onclick="location.href='/mainpage'">sfu-backpack</p>
			<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
			<div class="collapse navbar-collapse" id="navbarResponsive">
			</div>
		</div>
	</nav>
	<header class="masthead">
		<div class="container h-100">
			<section class="row justify-content-center">
				<div class="login-form">
					<form action="/login" method="post">
						<h2 class="text-center">Login</h2>
						<div class= "warning" style="color:red;"> 
							<%= typeof msg != 'undefined' ? msg : '' %>
						  </div><br>   
						<div class="form-group has-error">
							<input type="text" class="form-control" name="uid" placeholder="ID" required="required">
						</div>
						<div class="form-group">
							<input id="pass" type="password" class="form-control" name="upassword" placeholder="Password" required="required">
							<span id="eye"><i class="fa fa-eye fa-lg"></i></span>
						</div>        
						<div class="form-group">
							<button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
						</div>
						<p><a href="/find_pw">Lost your Password?</a></p>
					</form>
					<p class="text-center small">Don't have an account? <a href="/signUp">Sign up here!</a></p>
					<p class="text-center small">Back to Mainpage?<a href="/mainpage">Main Here!</a></p>
				</div>
	</header>



</body>
<script>
	$(document).ready(function(){
    $('#eye').on('click',function(){
        $('input').toggleClass('active');
        if($('input').hasClass('active')){
            $(this).children().attr('class',"fa fa-eye-slash fa-lg")
            $('#pass').attr('type','text');
        }else{
            $(this).children().attr('class',"fa fa-eye fa-lg")
            $('#pass').attr('type','password');
        }
    });
});

</script>
<script type="text/javascript" src="./mainpage_scripts.js"></script>
</html>