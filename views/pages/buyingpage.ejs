/* buying page html */

* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

.buying-menu {
  width: 100%;
  position: relative;
}

.navigationDesktop {
  text-align: center;
}

nav {
  display: inline-block;
  text-align: center;
  text-transform: uppercase;
}

nav a {
  font-family: monospace;
  font-weight: bold;
  font-size: 15pt;
  color: #112233;
}

nav a:hover {
  background: #223433;
  color: #f0f1f5;
}

nav ul {
  list-style: none;
}

nav ul li {
  float: left;
  width: 50px;
  height: 40px;
  line-height: 40px;
  background: #fc575e;
}

nav ul ul li {
  position: relative;
  display: none;
}

nav ul ul ul {
  display: none;
}

nav ul li:hover ul li {
  display: block;
  animation: navmenu 500ms forwards;
}
@keyframes navmenu {
  0% {
    opacity: 0;
    top: 25px;
  }
  100% {
    opacity: 1;
    top: 0px;
  }
}
nav ul ul li:hover ul {
  display: block;
  position: absolute;
  width: 200px;
  left: 140px;
  top: 0px;
}

.course-name {
  display: inline-block;
  width: 200px;
  text-align: right;
}

.course-heading-title {
  text-align: center;
  margin: 50px;
}
.display-image-books {
  display: inline-block;
  width: 500px;
  height: 500px;
}

.image-book {
  width: 100px;
}

